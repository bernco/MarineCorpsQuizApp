<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/question_4_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/iwo_jima" />

        <!-- Question 4 layout -->
        <LinearLayout
            android:id="@+id/question_4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_4_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/regular_dimen"
                android:layout_marginRight="@dimen/regular_dimen"
                android:layout_marginTop="@dimen/regular_dimen"
                android:text="@string/question_4"
                android:textSize="@dimen/question_text_size"
                android:theme="@style/marineText" />

            <!-- Users can select multiple answers -->
            <CheckBox
                android:id="@+id/question_4a"
                style="@style/marineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/question_dimen"
                android:layout_marginTop="@dimen/question_dimen"
                android:text="@string/question_4a"
                android:theme="@style/Select" />

            <CheckBox
                android:id="@+id/question_4b"
                style="@style/marineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/question_dimen"
                android:layout_marginTop="@dimen/question_dimen"
                android:text="@string/question_4b"
                android:theme="@style/Select" />

            <CheckBox
                android:id="@+id/question_4c"
                style="@style/marineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/question_dimen"
                android:layout_marginTop="@dimen/question_dimen"
                android:text="@string/question_4c"
                android:theme="@style/Select" />

            <CheckBox
                android:id="@+id/question_4d"
                style="@style/marineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/question_dimen"
                android:layout_marginTop="@dimen/question_dimen"
                android:text="@string/question_4d"
                android:theme="@style/Select" />

        </LinearLayout>

        <!-- Button to go to question 5 -->
        <Button
            android:id="@+id/bullet"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/question_4_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/button_dimen"
            android:layout_marginTop="@dimen/button_dimen"
            android:background="@drawable/next"
            android:onClick="submitQuestion4"
            android:rotation="9" />

    </RelativeLayout>

</ScrollView>

